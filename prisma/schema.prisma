generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String       @id @default(uuid())
  role                Roles        @default(user)
  firstname           String?
  lastname            String?
  phone_number        String       @unique
  email               String?      @unique
  password            String
  is_blocked          Boolean      @default(false)
  is_activate_account Boolean      @default(false)
  refresh_token       String?
  orders              Order[]
  address             UserAddress?
}

model Order {
  id        String      @id @default(uuid())
  userId    String?
  productId String
  count     Int
  status    OrderStatus @default(in_the_proccess)
  product   Product     @relation(fields: [productId], references: [id])
  user      User?       @relation(fields: [userId], references: [id])
}

model Product {
  id           String   @id @default(uuid())
  name         String   @unique
  price        Int
  description  String?
  code         String
  puctures_src String[]
  categories   String[]
  order        Order[]
}

model UserAddress {
  id                    String  @id @default(uuid())
  userId                String  @unique
  city                  String
  street                String
  nova_post_departament String?
  user                  User    @relation(fields: [userId], references: [id])
}

enum Roles {
  user
  admin
  moderator
}

enum OrderStatus {
  sent
  received
  transit
  in_the_proccess
  returned
}
